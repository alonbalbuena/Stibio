{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
	],"rules": {
		"order/order": [
			"custom-properties",
		  "dollar-variables",
		  "declarations",
		  "rules",
		  "at-rules"
		],
		"order/properties-order": [
			"width",
			"height"
    ],
    "scss/at-rule-no-unknown": true,
	}
}