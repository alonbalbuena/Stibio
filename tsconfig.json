{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "composite": true
  },
  "exclude": ["node_modules/**/*"],
  "references": [
    {
      "path": "tsconfig.develop.json"
    },
    {
      "path": "tsconfig.production.json"
    }
  ]
}
