{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "incremental": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
