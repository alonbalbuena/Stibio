{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "noImplicitOverride": true,
    "sourceMap": true
  },
  "exclude": ["node_modules/**/*"]
}
